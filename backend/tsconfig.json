{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,

    "types": [
      "node",
      "express",
      "passport",
      "passport-google-oauth20",
      "passport-local",
      "cors",
      "cookie-session",
      "bcrypt"
    ]
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
